<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colores principales -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#A946FF"/>
    <SolidColorBrush x:Key="PrimaryHoverColor" Color="#C26CFF"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#BB4CFF"/>
    <SolidColorBrush x:Key="SuccessHoverColor" Color="#D872FF"/>
    <SolidColorBrush x:Key="DangerColor" Color="#FF4FD8"/>
    <SolidColorBrush x:Key="DangerHoverColor" Color="#FF72E2"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FF8CFF"/>
    <SolidColorBrush x:Key="WarningHoverColor" Color="#FFB6FF"/>
    
    <SolidColorBrush x:Key="BackgroundColor" Color="#13001F"/>
    <SolidColorBrush x:Key="SurfaceColor" Color="#1D022D"/>
    <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#D3B4FF"/>
    
    <!-- Efectos visuales -->
    <DropShadowEffect x:Key="DropShadowEffect" 
                      Color="#000000" 
                      Direction="270" 
                      BlurRadius="8" 
                      ShadowDepth="4" 
                      Opacity="0.3"/>
    
</ResourceDictionary>
